{
  "manifest_version": 2,
  "name": "Purpose",
  "version": "1.0",
  "description": "Stay focused by being reminded of your purpose on certain websites.",
  "homepage_url": "https://github.com/dkarkada/purpose",
  "icons": {
    "48": "icons/purpose48.png"
  },

  "permissions": [
    "tabs",
    "storage",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
  	"default_icon": {
	    "16": "icons/purpose16.png",
	    "32": "icons/purpose32.png",
      "48": "icons/purpose48.png"
  	},
  	"default_title": "Purpose",
    "default_popup": "addPage.html"
  }
}